<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_issuebook"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/image1"
    tools:context="com.adsol.lmslibrary.lms_library.Issuebook">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:id="@+id/studentname"
        android:layout_alignParentEnd="true"
        android:hint="Student Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/studentname"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:id="@+id/studentid"
        android:layout_alignParentEnd="true"
        android:hint="Student Id" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="38dp"
        android:id="@+id/bookname"
        android:layout_below="@+id/studentid"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Book Name(Case Sensitive)" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_below="@+id/bookname"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:id="@+id/studentcontact"
        android:layout_alignParentEnd="true"
        android:hint="Student Contact" />

    <Button
        android:text="Issue Book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/studentcontact"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:id="@+id/issuebook1" />

</RelativeLayout>
